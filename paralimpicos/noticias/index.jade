- location = "noticias"
- home = true
- title = "Noticias de los Juegos Paralímpicos Rio 2016 | Claro Sports"
- description = "Las últimas y más relevantes noticias de los juegos paralímpicos de Río 2016 por Claro Sports."
- keywords = "Las Últimas Noticias de los Paralímpicos Rio 2016, Noticias de los Juegos Paralímpicos Rio 2016, Juegos Paralímpicos Rio 2016, Clarosports"

include ../../jade/includes/mixines

doctype html
html
	include ../../jade/includes/head
	body
		+comscore('noticias')
		+pixeles()
		include ../../jade/includes/top-bar
		include ../../jade/includes/header

		// ========================
		// Panel sponsor
		// ========================
		+sponsored('Noticias')

		// ========================
		// Seccion principal
		// ========================
		section.main-section#main-section
			.container.change-day-bar
				a#prev(href="#"): i.fa.fa-arrow-circle-o-left
				span#date
				a#next(href="#"): i.fa.fa-arrow-circle-o-right

			.container.widget-main-container#news-list

			script(src="/paralimpicos/js/noticias.js#{version}")
				
			.banner
				.leaderboard
					+item-banner("div-lb02")
				
		include ../../jade/includes/footer
		
